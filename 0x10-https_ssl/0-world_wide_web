#!/usr/bin/env bash
# This script displays information about subdomains for a given domain

print_info() {
	    local domain="$1"
	        local subdomain="$2"
		    local write_down
		        write_down=$(dig +noall +answer "${subdomain}.${domain}" | awk 'NR==1{print $4" "$5}')
			    if [ -n "$write_down" ]; then
				            echo "The subdomain ${subdomain}.${domain} is a ${write_down%% *} record and points to ${write_down##* }"
					        else
							        echo "No record found for ${subdomain}.${domain}"
								    fi
							    }

						    if [ -z "$2" ]; then
							        for sub in www lb-01 web-01 web-02; do
									        print_info "$1" "$sub"
										    done
									    else
										        print_info "$1" "$2"
						    fi

